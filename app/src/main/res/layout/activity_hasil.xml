<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.upload.UploadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView

            android:id="@+id/card_view"
            android:layout_width="332dp"
            android:layout_height="299dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="302dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imgPrev"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:src="@drawable/preview" />

                <TextView
                    android:id="@+id/result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Berpenyakit"
                    android:textColor="@color/red"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    tools:ignore="TextSizeCheck" />

                <TextView
                    android:id="@+id/resultdesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Akurasi"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    tools:ignore="TextSizeCheck" />

                <TextView
                    android:id="@+id/akurasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mengidap Coccidiosis"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    tools:ignore="TextSizeCheck" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="330dp"
            android:layout_height="263dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                >

                <TextView
                    android:id="@+id/nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="@string/nama"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    tools:ignore="TextSizeCheck" />

                <TextView
                    android:id="@+id/tanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nama"
                    android:layout_marginTop="30dp"
                    android:text="@string/tanggal"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    tools:ignore="TextSizeCheck" />

                <TextView
                    android:id="@+id/deskripsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tanggal"
                    android:layout_marginTop="30dp"
                    android:text="@string/deskripsi"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    tools:ignore="TextSizeCheck" />

                <TextView
                    android:id="@+id/inputNama"
                    android:layout_width="201dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="51dp"
                    android:layout_marginTop="29dp"
                    android:layout_toRightOf="@+id/nama"
                    android:hint="-"
                    android:minHeight="48dp"
                    android:textSize="14dp"
                    tools:ignore="TextSizeCheck" />

                <TextView
                    android:id="@+id/inputTanggal"
                    android:layout_width="201dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/inputNama"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/tanggal"
                    android:hint="-"
                    android:minHeight="48dp"
                    android:focusable="false"
                    android:clickable="true"
                    android:textSize="14dp"
                    tools:ignore="TextSizeCheck" />

                <TextView
                    android:id="@+id/inputDeskripsi"
                    android:layout_width="201dp"
                    android:layout_height="116dp"
                    android:layout_below="@+id/inputTanggal"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/deskripsi"
                    android:gravity="start"
                    android:hint="-"
                    android:textSize="14dp"
                    tools:ignore="TextSizeCheck" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:textAlignment="center"
            android:text="@string/save"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:background="@drawable/button_corner_radius"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible" />


</FrameLayout>
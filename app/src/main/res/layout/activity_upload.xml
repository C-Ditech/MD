<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.upload.UploadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView

            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="246dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imgPrev"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Preview"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="332dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btnCamera"
                android:layout_marginRight="20dp"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_corner_radius"
                android:text="@string/takePhoto"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnImport"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_corner_radius"
                android:text="@string/takeImage"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textStyle="bold" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="330dp"
            android:layout_height="263dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                >

                <TextView
                    android:id="@+id/nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="@string/nama"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    tools:ignore="TextSizeCheck" />

                <TextView
                    android:id="@+id/tanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nama"
                    android:layout_marginTop="30dp"
                    android:text="@string/tanggal"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    tools:ignore="TextSizeCheck" />

                <TextView
                    android:id="@+id/deskripsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tanggal"
                    android:layout_marginTop="30dp"
                    android:text="@string/deskripsi"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    tools:ignore="TextSizeCheck" />

                <EditText
                    android:id="@+id/inputNama"
                    android:layout_width="201dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="51dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/nama"
                    android:hint="@string/inputName"
                    android:minHeight="48dp"
                    android:textSize="14dp"
                    tools:ignore="TextSizeCheck" />

                <EditText
                    android:id="@+id/inputTanggal"
                    android:layout_width="201dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/inputNama"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="0dp"
                    android:layout_toRightOf="@+id/tanggal"
                    android:hint="@string/inputTanggal"
                    android:minHeight="48dp"
                    android:focusable="false"
                    android:clickable="true"
                    android:textSize="14dp"
                    tools:ignore="TextSizeCheck" />

                <EditText
                    android:id="@+id/inputDeskripsi"
                    android:layout_width="201dp"
                    android:layout_height="140dp"
                    android:layout_below="@+id/inputTanggal"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@+id/deskripsi"
                    android:hint="@string/inputdesc"
                    android:textSize="14dp"
                    android:gravity="start"
                    tools:ignore="TextSizeCheck" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:textAlignment="center"
            android:text="@string/cek"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:background="@drawable/button_corner_radius"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible" />


</FrameLayout>